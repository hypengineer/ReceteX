	<div>
		<div class="card">
			<div class="card-header  text-white bg-success bg-gradient">
				<span class="fs-4">İlaç Listesi</span>
				<a asp-action="UpdateMedicinesList" asp-controller="Medicine" id="btnUpdate" class="btn btn-warning ms-2">Listeyi Güncelle</a>
			</div>
			<div class="card-body">
				<table id="tblMedicines" class="table table-bordered table-striped" style="width:100%">
				</table>
			</div>
		</div>
	</div>

	@section Scripts{
		<script>
			var DataTable;

			$(document).ready(function () {
				fillDataTable();
			})

			function fillDataTable() {
				DataTable = $('#tblMedicines').DataTable({
					ajax: '/Medicine/GetAll',
					columns: [
						{ data: 'id', title: 'Id', width: '300px' },
						{ data: 'barcode', title: 'Barkod' },
						{ data: 'name', title: 'İlaç Adı' }
					]
				});
			}
		</script>
	}
